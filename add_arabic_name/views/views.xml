<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_view_form_inherit_1" model="ir.ui.view">
            <field name="name">hr.employee.view.form1</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']" position="after">
                    <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="arabic_name" placeholder="Employee's arabic Name" required="True"/>
                            </h1>
                            
                        </div>
                   
                </xpath>
            </field>
        </record>

    </data>
</odoo>
