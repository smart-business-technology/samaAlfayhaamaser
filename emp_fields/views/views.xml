<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_hr_employee_view_form1" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit1</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page string="الاهداف">
                        <group>
                            <field name="elhadaf"/>
                            <field name="perc_hadaf"/>
                        </group>
                    </page>

                    <page string="دفتر الوصولات">
                        <group>
                            <field name="wosolat_ids">
                                <tree editable="bottom">
                                    <field name="from1"/>
                                    <field name="to1"/>
                                    <field name="date1"/>
                                </tree>
                            </field>
                        </group>

                    </page>
                    <page string="السلف">
                        <group>
                            <field name="solaf_ids">
                                <tree editable="bottom">

                                    <field name="solaf"/>
                                    <field name="date1"/>
                                    <field name="kest"/>
                                    <field name="date2"/>

                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="الملاحظات">
                        <group>
                            <field name="notes"/>
                        </group>
                    </page>

                </xpath>


                <xpath expr="//group[@name='identification_group']" position="after">

                        <group>
                            <field name="elahad"/>
                        </group>
                        <group>
                            <field name="instrument_no"/>
                            <field name="amount"/>
                        </group>

                </xpath>
            </field>
        </record>
    </data>
</odoo>